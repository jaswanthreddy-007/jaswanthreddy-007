void Journey(int par)
{  switch(par)
    {
    case 1:
        printf("BENGALURU ==> PRODDATUR\n");
        break;
    case 2:
        printf("BENGALURU ==> CHENNAI\n");
    case 3:
        printf("BENGALURU ==> HYDERABAD\n");
    }
}
void PRICE(int money)
{   int decision;
    printf("price - %d rs\n",money);
    printf("reservation tax - 50 rs\n");
    printf("total amount to be paid = %d rs\n",money+50);
    printf("press 1 to proceed to payment portal or press 2 to cancel\n");
    scanf(" %c",&decision);
    if(decision==1)
    {
        printf("please wait !!!!!!!!in few seconds you will be directed to payment portal\n==============================================================\n");

    }
    else{printf("your payment cancelled!!!!!\n==================================================================\n");}
}
